{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseURl": "./",
    "noImplicitAny": false,
    "noImlicitReturns": false,
    "outDir": "build",
    "rootDir": "/",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": ["node_modules", "test/**/*"]
}
